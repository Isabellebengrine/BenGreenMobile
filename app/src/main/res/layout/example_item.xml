<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRubrique"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/design_default_color_secondary_variant"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:layout_margin="4dp"
    android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/iVRubriquePicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/ImageDescription"
                android:src="@drawable/categoriesbatterie"
                 />

            <TextView
                android:id="@+id/tVRubriqueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iVRubriquePicture"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/iVRubriquePicture"
                android:fontFamily="casual"
                android:text="@string/tVRubriqueNameString"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>

</androidx.cardview.widget.CardView>